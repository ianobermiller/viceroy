{
    "manifest_version": 3,
    "name": "Viceroy",
    "version": "1.0.0",
    "description": "A Chrome extension for monarch-app.aop.com",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://monarch-app.aop.com/*"],
    "background": { "service_worker": "background.js" },
    "content_scripts": [
        {
            "matches": ["https://monarch-app.aop.com/*"],
            "js": ["content.js"],
            "css": ["content.css"],
            "all_frames": true
        }
    ],
    "icons": { "16": "icons/16.png", "32": "icons/32.png", "48": "icons/48.png", "128": "icons/128.png" }
}
